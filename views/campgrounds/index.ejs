    <% layout('/layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new">Create New Campground</a>

    <% for(let campground of campgrounds) {%> 
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= campground.image %> " class="img-fluid"alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.title %> </h5>
                        <p class="card-text"><%= campground.description %> </p>
                        <p class="card-text">
                            <small class="text-muted"><%= campground.location %> </s>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground.id %>">View <%= campground.title %> </a>
                    </div>
                </div>
            </div>
        </div>
    <% } %> 


 